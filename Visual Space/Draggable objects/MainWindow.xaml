<Window x:Class="Draggable_objects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Draggable_objects"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="template1">
                <Ellipse Width="60" Height="30" Fill="Black"/>
            </ControlTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Canvas Name="myCanvas" Width="600" Height="600" Background="Transparent">
        <Thumb Name="myThumb" DragDelta="onDragDelta" 
               Canvas.Left="0" Canvas.Top="0" Template="{StaticResource template1}"/>
    </Canvas>
</Window>