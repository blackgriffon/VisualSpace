<UserControl x:Class="ColorReflectionwithWPF.ColorItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorReflectionwithWPF"
             
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400" Name="_RootColor">
   
        
        <Border BorderBrush="Black"
                BorderThickness="1"
                Width="250" Margin="3">

            <StackPanel Orientation="Horizontal">

                <Rectangle Name="rectangle" Width="40" Height="40" Margin="4" />

                <StackPanel VerticalAlignment="Center" >

                    <TextBlock Name="txtblkName" FontSize="12" />
                    <TextBlock Name="txtblkRgb" FontSize="10" />

                </StackPanel>

            </StackPanel>
            
        </Border>
        
   
</UserControl>
