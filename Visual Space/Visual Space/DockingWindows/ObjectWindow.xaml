                        <WrapPanel Name="Expd_ovens"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1, 1, 1, 1" AllowDrop="True"/>
                    </Expander>

                    <Expander Template="{StaticResource SimpleExpanderTemp}"  OverridesDefaultStyle="True"   Header="냉장고" HorizontalAlignment="Left"
