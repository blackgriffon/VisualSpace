                    </Expander>
                </StackPanel>
            </Expander>

            <Expander Template="{StaticResource SimpleExpanderTemp}"  OverridesDefaultStyle="True"   Header="주방" HorizontalAlignment="Left"
                  VerticalAlignment="Top"   >
                <StackPanel>

                    <Expander Template="{StaticResource SimpleExpanderTemp}"  OverridesDefaultStyle="True"   Header="싱크대" HorizontalAlignment="Left"
                  VerticalAlignment="Top"  Margin="30,0,0,0" >
                        <WrapPanel Name="Expd_sinks"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1, 1, 1, 1" AllowDrop="True"/>
                    </Expander>

                    <Expander Template="{StaticResource SimpleExpanderTemp}"  OverridesDefaultStyle="True"   Header="가스레인지" HorizontalAlignment="Left"
                  VerticalAlignment="Top"  Margin="30,0,0,0"  >
                        <WrapPanel Name="Expd_gasstoves"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1, 1, 1, 1" AllowDrop="True"/>
                    </Expander>

                    <Expander Template="{StaticResource SimpleExpanderTemp}"  OverridesDefaultStyle="True"   Header="오븐" HorizontalAlignment="Left"
