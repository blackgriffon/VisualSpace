                <WrapPanel Name="Expd_toys"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1, 1, 1, 1" AllowDrop="True"/>
            </Expander>


        </StackPanel>

    </ScrollViewer>







</docking:DockableContent>
