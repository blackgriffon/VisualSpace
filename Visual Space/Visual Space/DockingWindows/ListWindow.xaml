<docking:DockableContent x:Class="Nollan.Visual_Space.DockingWindows.ListWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nollan.Visual_Space.DockingWindows"
             xmlns:docking="clr-namespace:DockingLibrary;assembly=DockingLibrary" 
             xmlns:metroControls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"             
             mc:Ignorable="d" 
             Title="ListWindow" Height="600" Width="Auto"  >

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="0"/>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="1"/>

        <WrapPanel Name="WrapPanel_List"  Background="LightCyan" Height="Auto" Width="Auto"  >
        
        <TreeView Margin ="0,0,0,0" Name="MyTreeView" HorizontalAlignment="Left" Background="Transparent"                   
                VerticalAlignment="Top" Width="600" Height="Auto" Grid.Column="0"  >

            <!--<TreeViewItem Name="desk" Header = "책상상">

                <TreeViewItem Header = "콜라"></TreeViewItem >
                <TreeViewItem Header = "Pepsi"></TreeViewItem >
                <TreeViewItem Header = "Orange Juice"></TreeViewItem >

            </TreeViewItem >-->
        </TreeView >

        <!--<TreeView Margin = "0,0,0,0" Name = "TREEVIEW_CHAIRS" HorizontalAlignment = "Left" Background="Transparent"
                VerticalAlignment = "Top" Width ="600" Height = "Auto" Grid.Column="0"  >

            <TreeViewItem Name="chairs" Header = "의자">

                <TreeViewItem Header = "콜라"></TreeViewItem >
                <TreeViewItem Header = "Pepsi"></TreeViewItem >
                <TreeViewItem Header = "Orange Juice"></TreeViewItem >

            </TreeViewItem >
        </TreeView >-->        
       
    </WrapPanel>

        <VirtualizingStackPanel Grid.Column="1">
            <Grid>
                <Label Content="총 금액"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,19,0,0" />
                <TextBlock Name="tbk_TotalCash" Text="" Background="LightSteelBlue" Padding="3,0,0,0"
            VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,20,0,0" Width="130" />

            </Grid>

            <Grid Margin="0,15,0,0">
                <Label Content="이미지"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,19,0,0"/>
                <Button Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,0,0,0">
                    <Image Name="img_ListThumnail"/>
                </Button>
            </Grid>

            <Grid>
                <Label Content="소품가격"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,19,0,0" />
                <TextBlock Name="tbk_SelectedCash" Text="" Background="LightSteelBlue" Padding="3,0,0,0"
            VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,20,0,0" Width="130" />

            </Grid>

            <Grid>
                <Label Content="브랜드"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,19,0,0"  />
                <TextBlock Name="tbk_brand" Text="" Background="LightSteelBlue" Padding="3,0,0,0"
            VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,20,0,0" Width="130" />

            </Grid>

            <Grid Height="300">
                <Label Content="설명"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,19,0,0" />
                <TextBlock Name="tbk_explain" Text="" Width="185" Height="200" TextWrapping="Wrap" Background="LightSteelBlue" Padding="3,0,0,0"
            VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,20,0,0"  />
            </Grid>

          
            
        </VirtualizingStackPanel>
      

        

    </Grid>
</docking:DockableContent>
