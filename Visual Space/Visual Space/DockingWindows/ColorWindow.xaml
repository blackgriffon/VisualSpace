                    </Button>
                    <Button Name="btn_FloorViewBox3" Width="60" Height="60"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,18,0,0"  
                        Click="btn_FloorViewBox3_Click"  >
                        <Image Name="img_FloorViewBox3" Width="Auto" Height="Auto" Stretch="Fill" Grid.Row="0" />
                    </Button>
                </StackPanel>
            </Grid>

            <Label Content="바닥 선택" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
