                        <Button x:Name="btn_FloorFileDialogClear" Content="바닥 삭제" HorizontalAlignment="Left"  Click="btn_FloorFileDialogClear_Click"
                    VerticalAlignment="Bottom" 
                Height="30" Margin="3, 0, 0, 0 "  Width="110" />

                    </StackPanel>


                    <Button  Width="80" Height="80"  Click="btn_FloorFileDialog_Click"
                Margin="10,10,0,0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Image Name="img_UserSelectedFloorFile" Width="Auto" Height="Auto" Stretch="Fill" Grid.Row="0" />
                    </Button>

                    <Grid Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="111.196,10.18,0,0" Width="220.159">
                        <Border BorderBrush="Black" BorderThickness="2" Margin="0,0,0,0">
