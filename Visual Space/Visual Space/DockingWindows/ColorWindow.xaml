        <Grid  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="104.345,335.94,0,0" Height="84.502" Width="365">
            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="0" Width="364.545" Height="84.502" HorizontalAlignment="Left" VerticalAlignment="Top"/>
